<div class='header'>
  <div class='header-title'>
    自分が行うべき手続きについて把握して、金額が分かる箇所は入力しましょう
  </div>
  <div class='precautions-when-inputting'>
    金額は半角数字で入力すること！！
  </div>
</div>

<div class='main'>
  <%= form_with model: @tuition, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

    <!-- 大項目 学費 -->
    <div class='major-cost'>
      <h2 class='costs-title'>学費について</h2>
        <!-- 中項目 -->
        <div class='mediam-cost'>
          <!-- 小項目 -->
          <div class='sub-cost'>
            <!-- 何について書くのか -->
            <div class='cost-title'><span>通学の必要性</span></div>
            <!-- 通学の必要性 -->
            <div class='procedure'>
              <span>要否</span>
              <%= f.collection_select(:necessity_of_attending_school_id, NecessityOfAttendingSchool.all, :id, :name, {}, {class:"select-box", id:"necessity-of-attending-school"}) %>
              <span class="indispensable">必須</span>
            </div>
            <!-- 通学の必要性 -->
          </div>
          <!-- 小項目 -->
        </div>
        <!-- 中項目 -->

        <!-- 中項目 -->
        <div class='mediam-cost'>
          <!-- 小項目 -->
          <div class='sub-cost'>
            <!-- 何について書くのか -->
            <div class='cost-title'><span>入学費</span></div>
            <!-- 入学費-->
            <div class='payment'>
              <span>支払額</span>
              <span class="cost-yen">(¥/回)</span>
              <%= f.text_field :admission_cost, class:"price-input", id:"admission-cost", placeholder:"例）10000" %>
            </div>
            <!-- 入学費-->
          </div>
          <!-- 小項目 -->
        </div>
        <!-- 中項目 -->

        <!-- 中項目 -->
        <div class='mediam-cost'>
          <!-- 小項目 -->
          <div class='sub-cost'>
            <!-- 何について書くのか -->
            <div class='cost-title'><span>学費</span></div>
            <!-- 学費-->
            <div class='payment'>
              <span>支払額</span>
              <span class="cost-yen">(¥/月)</span>
              <%= f.text_field :monthly_tuition, class:"price-input", id:"monthly-tuition", placeholder:"例）10000" %>
            </div>
            <!-- 学費-->
          </div>
          <!-- 小項目 -->
        </div>
        <!-- 中項目 -->

        <!-- 中項目 -->
        <div class='mediam-cost'>
          <!-- 小項目 -->
          <div class='sub-cost'>
            <!-- 何について書くのか -->
            <div class='cost-title'><span>その他</span></div>
            <!-- その他-->
            <div class='payment'>
              <span>支払額</span>
              <span class="cost-yen">(¥/月)</span>
              <%= f.text_field :other_tuitions, class:"price-input", id:"other-tuitions", placeholder:"例）10000" %>
            </div>
            <!-- その他-->
          </div>
          <!-- 小項目 -->
        </div>
        <!-- 中項目 -->
    </div>
    <!-- 大項目 学費 -->

    <div class="save-btn-value">
      <%= f.submit "保存する" ,class:"save-btn" %>
      <%= link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  <% end %>
</div>